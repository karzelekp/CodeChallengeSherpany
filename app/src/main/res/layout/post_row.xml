<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="postWithUser"
            type="pl.karzelek.codechallengesherpany.db.PostWithUser" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/post_title_vertical_padding"
            android:text="@{postWithUser.post.title}" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/post_title_vertical_padding"
            android:text="@{postWithUser.user.email}" />
    </LinearLayout>

</layout>